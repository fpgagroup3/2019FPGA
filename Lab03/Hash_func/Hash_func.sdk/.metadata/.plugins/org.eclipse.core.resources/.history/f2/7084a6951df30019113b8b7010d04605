#include "xparameters.h"
#include "xgpio.h"
#include "xil_printf.h"
#include <stdio.h>
#include <string.h>

#define SW_DEVICE_ID  XPAR_GPIO_0_DEVICE_ID
#define SIZE 9

XGpio SW_Gpio;


int hash(const char word) {
    int hash = 0;
    int n;
    n = word - 'a' + 1;
    hash = ((hash << 3) + n) % SIZE;
    return hash;
}

int main() {
	int SW_Status;
	char ID[10] = "";
	u32  sw_data, temp = 0x04;

	/* Initialize the GPIO driver */
	SW_Status = XGpio_Initialize(&SW_Gpio, SW_DEVICE_ID);
	if (SW_Status) {
		xil_printf("Gpio Initialization Failed\r\n");
		return XST_FAILURE;
	}
	/* Set the direction for the switch as input */

	XGpio_SetDataDirection(&SW_Gpio, 1, 0x0f);

	while (1) {
			sw_data = XGpio_DiscreteRead(&SW_Gpio, 1);
			if(temp != sw_data){
				xil_printf("switches data = %d\r\n", sw_data);
				switch(sw_data){
					case 0x00:
						strcpy(ID, "E24056027");
						xil_printf("The ID is E24056027, coding....\n");
						temp = 0x00;
						break;
					case 0x01:
						strcpy(ID, "E24056483");
						xil_printf("The ID is E24056483, coding....\n");
						temp = 0x01;
						break;
					case 0x02:
						strcpy(ID, "E24056726");
						xil_printf("The ID is E24056726, coding....\n");
						temp = 0x02;
						break;
					default:
						strcpy(ID, "");
						xil_printf("Unknown!!\n");
						temp = 0x03;
						break;
				}
				for(int i = 0; i < strlen(ID); i++){
					xil_printf("%d ", hash(ID[i]));
				}
				xil_printf("\n");
			}
	}
	xil_printf("Successfully ran Gpio Example\r\n");
	return XST_SUCCESS;
}
